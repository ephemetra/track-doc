<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.ephemetra</groupId>
        <artifactId>track-doc-all</artifactId>
        <version>1.0.0</version>
    </parent>

    <artifactId>track-doc</artifactId>
    <packaging>jar</packaging>
    <name>Track Doc</name>
    <description>Annotation processor for generating business tracking Excel documentation.</description>
    <url>https://github.com/ephemetra/track-doc-all</url>

    <licenses>
        <license>
            <name>Apache License 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>ephemetra</name>
            <email>ephemetra@163.com</email>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>org.ephemetra</groupId>
            <artifactId>track-doc-processor</artifactId>
            <version>1.0.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- 可选：Maven Compiler Plugin 配置，方便用户直接启用注解处理器 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.ephemetra</groupId>
                            <artifactId>track-doc-processor</artifactId>
                            <version>1.0.0</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- 发布到 Maven 仓库（如果有私服或 Maven Central） -->
    <distributionManagement>
        <repository>
            <id>ossrh</id>
            <name>OSSRH Repository</name>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>
</project>
